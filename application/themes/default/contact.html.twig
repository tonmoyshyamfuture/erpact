
{% extends "index.html.twig" %}

{% block content %}


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-header">
                <h2>{{ cms.title }}</h2>
            </div>
        </div>
    </div>

<div class="row">
    <div class="col-sm-5">
        


        <form>
            <legend><span class="glyphicon glyphicon-globe"></span> Our office</legend>
            <address class="well well-sm address">
                {{ html_entity_decode(cms.content,ENT_QUOTES,'utf-8') }}

            </address>
            </form>
        <div class="margin-t-20">
            <legend><span class="glyphicon glyphicon-map-marker"></span> Our Location</legend>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1550.4350804436283!2d88.29586389088307!3d22.4449468412821!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a027ae83096c5dd%3A0xa262a9d1eb16f8a3!2sSketch+Web+Solutions%2C+Diamond+Harbour+Rd%2C+Joka%2C+Kolkata%2C+West+Bengal+700104!5e0!3m2!1sen!2sin!4v1451300210805" width="100%" height="238" frameborder="1" style="border:1px solid #ddd; padding:1px" allowfullscreen></iframe>
        </div>


        </div>
        <div class="col-sm-7">            
                <form action="{{ base_url('front/contactus') }}" method="post" name="contactus" id="contactus">
                
                        <div class="form-group">
                            <label for="name">
                                Full Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="email">
                                Email Address</label>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span>
                                </span>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" required="required" /></div>
                        </div>
                    <div class="form-group">
                            <label for="email">
                                Phone</label>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span>
                                </span>
                                <input type="text" class="form-control" name="phone" id="phone" placeholder="Enter phone" /></div>
                        </div>
                        <div class="form-group">
                            <label for="subject">
                                Subject</label>
                            <select id="subject" name="subject" class="form-control" required="required">
                                <option value="feedback" selected="">Feedback</option>
                                <option value="question">Question</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    
                        <div class="form-group">
                            <label for="name">
                                Message</label>
                            <textarea name="message" id="message" class="form-control" rows="7" cols="25" required="required"
                                placeholder="Message"></textarea>
                        </div>
                                         
                    <div class="col-md-12">
                        <input  type="submit" class="btn btn-primary pull-right" id="btnContactUs" value="Send Message">
                            
                    </div>                
                </form>
            </div>
        </div>        
    </div>

</div><!-- /.content fluid-->



{% endblock %}
